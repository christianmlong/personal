[user]
	name = Christian Long
	email = chlong2@cisco.com
[gitreview]
	username = christianmlong
[push]
	default = matching
[core]
	editor = vim
[alias]
        lol = log --graph --decorate --pretty=oneline --abbrev-commit        
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all 
	st = status
	co = checkout
	ci = commit
	wiff = diff --color-words

# Reference
# http://stackoverflow.com/questions/15316601/in-what-cases-could-git-pull-be-harmful
	up = "!git remote update -p; git merge --ff-only @{u}"

	ap = add --patch
	ff = merge --ff-only
[diff]
	tool = bc3
[merge]
	tool = bc3
[rerere]
	enabled = true
	autoupdate = true
[pull]
	ff = only
[hub]
	host = tip-github-1.cisco.com
[difftool "p4merge"]
	path = /Applications/p4merge.app/Contents/Resources/launchp4merge
[mergetool "p4merge"]
	path = /Applications/p4merge.app/Contents/Resources/launchp4merge
[difftool "bc3"]
    trustExitCode = true
[mergetool "bc3"]
    trustExitCode = true
