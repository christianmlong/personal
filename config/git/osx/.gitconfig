[user]
	name = Christian Long
	email = chlong2@cisco.com
[gitreview]
	username = christianmlong
[push]
	default = upstream
[core]
	editor = vim
	excludesfile = /Users/chlong2/.gitignore_global
[alias]
        # Just this branch
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        # Some branches
        lols = log --graph --decorate --pretty=oneline --abbrev-commit --branches=*
        # All branches and tags
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	st = status
	co = checkout
	ci = commit
    d = diff
    dt = difftool
    ds = diff --staged
    dts = difftool --staged
    lsp = log --stat -p

# Reference for git up alias
# http://stackoverflow.com/questions/15316601/in-what-cases-could-git-pull-be-harmful
	up = "!git remote update -p; git merge --ff-only @{u}"

	ap = add --patch
	ff = merge --ff-only

# Find orphaned commits
# Source: https://gist.github.com/matthewmccullough/988077
# with gitk
    orphank = "!gitk --all `git reflog | cut -d ' ' -f 1`&"
# on the command line
    orphanl = "!git log --pretty=oneline --abbrev-commit --graph --decorate `git reflog | cut -d ' ' -f 1`"

    incoming = "!git fetch && git log --pretty=oneline --abbrev-commit --graph ..@{u}"
    outgoing = log --pretty=oneline --abbrev-commit --graph @{u}..

# I can never remember this syntax
    delete-remote-branch = push origin --delete 

[rerere]
	enabled = true
	autoupdate = true

[diff]
    #tool = bc3
    #tool = p4merge
    #tool = meld
    tool = kdiff3
[merge]
    #tool = bc3
    #tool = p4merge
    #tool = meld
    tool = kdiff3
[difftool]
    prompt = false
[mergetool]
    prompt = false
[difftool "p4merge"]
	path = /Applications/p4merge.app/Contents/Resources/launchp4merge
[mergetool "p4merge"]
	path = /Applications/p4merge.app/Contents/Resources/launchp4merge
[difftool "bc3"]
    trustExitCode = true
[mergetool "bc3"]
    trustExitCode = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
